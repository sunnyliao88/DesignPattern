@model DesignPattern.Web.ViewModels.EmployeeDetailsVM

@{
    ViewData["Title"] = "Details";
}

<h4>Employee </h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.EmployeeID):
        </dt>
        <dd class="col-sm-1 ">
            @Html.DisplayFor(model => model.Employee.EmployeeID):
        </dd>
        <dt class="col-sm-2 offset-1">
            @Html.DisplayNameFor(model => model.Employee.Name)
        </dt>
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.Employee.Name)
        </dd>
    </dl>
</div>

<h4>TotalSales</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sales.ToList()[0].ProductID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sales.ToList()[0].Total)
            </th>           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Sales)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td> 
            </tr>
        }
    </tbody>
</table>

<h4>Products</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products.ToList()[0].ProductID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.ToList()[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.ToList()[0].Stock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>

            <td>
                @Html.ActionLink("Sell", "Sell", new { id = Model.Employee.EmployeeID, productID = item.ProductID }) 
            

            </td>
        </tr>
        }
    </tbody>
</table>

<div>   
    <a asp-action="Index">Back to List</a>
</div>
